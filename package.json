{
    "name": "safe-forever-backend",
    "version": "1.0.0",
    "main": "server.ts",
    "author": "James Paing Oo",
    "license": "MIT",
    "scripts": {
        "dev": "nodemon dist/server.js",
        "watch": "tsc -w & nodemon --watch dist --ext js --exec 'tsc-alias'",
        "start": "node dist/server.js",
        "lint": "eslint",
        "build": "tsc && tsc-alias",
        "docker:down": "docker compose -f ../docker-compose.yaml down --rmi all -v",
        "docker:up": "docker compose -f ../docker-compose.yaml up -d",
        "test:migrate": "dotenv -e ./test.env -- yarn prisma migrate deploy",
        "test:it": "dotenv -e ./test.env -- ./wait-for-it.sh localhost:3306 && yarn prisma migrate deploy && jest --watchAll",
        "test": "yarn docker:up && yarn test:it",
        "test:unit": "vitest -c ./vitest.config.unit.ts",
        "test:unit:ui": "vitest -c ./vitest.config.unit.ts --ui",
        "test:int": "./scripts/run-integration.sh",
        "test:int:ui": "./scripts/run-integration.sh --ui"
    },
    "dependencies": {
        "@prisma/client": "5.21.1",
        "axios": "^1.7.7",
        "bcrypt": "^5.1.1",
        "body-parser": "^1.20.2",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dayjs": "^1.11.13",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "http-status": "^1.7.4",
        "joi": "^17.13.3",
        "jsonwebtoken": "^9.0.2",
        "lodash": "^4.17.21",
        "md5": "^2.3.0",
        "moment": "^2.30.1",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "mysql2": "^3.11.3",
        "pino": "^9.5.0",
        "pino-pretty": "^11.3.0",
        "qs": "^6.13.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.13.0",
        "@types/bcrypt": "^5.0.2",
        "@types/config": "^3.3.5",
        "@types/cookie-parser": "^1.4.7",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/lodash": "^4.17.12",
        "@types/morgan": "^1.9.9",
        "@types/supertest": "^6.0.2",
        "@vitest/coverage-v8": "2.1.4",
        "concurrently": "^9.0.1",
        "eslint": "^9.13.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-jest": "^28.8.3",
        "eslint-plugin-prettier": "^5.2.1",
        "globals": "^15.11.0",
        "jest": "^29.7.0",
        "jest-mock-extended": "^4.0.0-beta1",
        "prettier": "3.3.3",
        "prisma": "^5.21.1",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "tsc-alias": "^1.8.10",
        "tsconfig-paths-jest": "^0.0.1",
        "typescript": "^5.6.3",
        "typescript-eslint": "^8.11.0"
    }
}
